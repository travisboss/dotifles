{
    "variables": {
        "lang": "en",
        "locale": "en-US",
        "charset": "UTF-8",
        "indentation": "\t",
        "newline": "\n"
    },
    "html": {
        "filters": "html",
        "profile": "html",
        "abbreviations": {
            "!": "html:5",
            "link:css": "<link rel=\"stylesheet\" href=\"${1:style}.css\" />",
            "form:get": "<form action=\"\" method=\"get\">",
			"form:post": "<form action=\"\" method=\"post\">"
        }
    },
    "css": {
        "filters": "css",
        "profile": "css",
        "snippets": {
            "@i": "@import url(|);"
        }
    }
}
